<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_sport">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_sport"
                android:paddingBottom="@dimen/padding_sport">

                <com.example.smarttraining.Views.TextViewRoboto
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Mode de jeu"
                    android:textColor="@color/primaryTextColor" />

                <Button
                    android:id="@+id/badminton_config_mode_jeu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_white_border"
                    android:text="SIMPLE"
                    android:textColor="@color/primaryTextColor"
                    app:backgroundTint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_sport"
                android:paddingBottom="@dimen/padding_sport">

                <com.example.smarttraining.Views.TextViewRoboto
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Sets gagnants"
                    android:textColor="@color/primaryTextColor" />

                <Button
                    android:id="@+id/badminton_config_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_white_border"
                    android:text="2"
                    android:textColor="@color/primaryTextColor"
                    app:backgroundTint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_sport"
                android:paddingBottom="@dimen/padding_sport">

                <com.example.smarttraining.Views.TextViewRoboto
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Point par set"
                    android:textColor="@color/primaryTextColor" />

                <Button
                    android:id="@+id/badminton_config_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_white_border"
                    android:text="21"
                    android:textColor="@color/primaryTextColor"
                    app:backgroundTint="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_sport"
                android:paddingBottom="@dimen/padding_sport">

                <com.example.smarttraining.Views.TextViewRoboto
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Point maximum"
                    android:textColor="@color/primaryTextColor" />

                <Button
                    android:id="@+id/badminton_config_point_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_white_border"
                    android:text="25"
                    android:textColor="@color/primaryTextColor"
                    app:backgroundTint="@color/white" />

            </LinearLayout>

            <com.example.smarttraining.Views.TextViewRoboto
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_sport"
                android:text="Equipe 1 :"
                android:textColor="@color/primaryTextColor" />

            <EditText
                android:id="@+id/badminton_config_eq1_j1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Joueur 1"
                android:textColor="@color/primaryTextColor" />

            <EditText
                android:id="@+id/badminton_config_eq1_j2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Joueur 2"
                android:textColor="@color/primaryTextColor" />

            <com.example.smarttraining.Views.TextViewRoboto
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_sport"
                android:text="Equipe 2 :"
                android:textColor="@color/primaryTextColor" />

            <EditText
                android:id="@+id/badminton_config_eq2_j1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Joueur 1"
                android:textColor="@color/primaryTextColor" />

            <EditText
                android:id="@+id/badminton_config_eq2_j2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Joueur 2"
                android:textColor="@color/primaryTextColor" />

            <Button
                android:id="@+id/badminton_config_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/padding_sport"
                android:background="@drawable/custom_button_white_border"
                android:text="Jouer"
                android:textColor="@color/primaryTextColor"
                app:backgroundTint="@color/white" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>