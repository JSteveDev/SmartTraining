<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/secondaryColor"
    android:orientation="vertical"
    android:padding="@dimen/save_dialog_padding">

    <com.example.smarttraining.Views.TextViewRoboto
        android:id="@+id/save_dialog_End_Match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/save_dialog_padding"
        android:text="@string/end_match"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/save_dialog_text_size" />

    <com.example.smarttraining.Views.TextViewRoboto
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/save_dialog_padding"
        android:text="Les informations du match arrive bientÃ´t !"
        android:textColor="@color/primaryTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_dialog_Exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/scroller_padding"
            android:layout_weight="1"
            android:background="@drawable/custom_button_black_border"
            android:text="@string/non"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/save_dialog_text_size"
            android:textStyle="bold"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/save_dialog_Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/scroller_padding"
            android:layout_weight="1"
            android:background="@drawable/custom_button_black_border"
            android:text="@string/oui"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/save_dialog_text_size"
            android:textStyle="bold"
            app:backgroundTint="@color/black" />

    </LinearLayout>

</LinearLayout>